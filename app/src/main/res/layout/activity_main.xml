<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacquan.a7fading_animations.MainActivity">

    <ImageView
        android:id="@+id/king_luffy"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:onClick="fade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/luffy" />

    <ImageView
        android:id="@+id/angryLuffy"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginLeft="-65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:onClick="fade"
        android:src="@drawable/luffy_angry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/luffy_angry" />
</android.support.constraint.ConstraintLayout>
